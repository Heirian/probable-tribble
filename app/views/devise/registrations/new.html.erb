<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form-signin" }) do |f| %>

  <div class="text-center mb-4">
    <img class="mb-4" src="<%= asset_path('logoback.png') %>" alt="" width="72" height="72">
    <h1 class="h3 mb-3 font-weight-normal"><%= application_title %></h1>
    <p><%= t(:gaming_better_slogan) %></p>
  </div>

  <div class="form-label-group">
    <%= f.email_field :email, autofocus: true, autocomplete: "off", id: "inputEmail", class: "form-control", placeholder: "Email address", required: true  %>
    <label for="inputEmail"><%= t(:email_address) %></label>
  </div>

  <div class="form-label-group">

    <%= f.password_field :password, autocomplete: "off", id:"inputPassword", class: "form-control", placeholder: "Password", required: true  %>
    <label for="inputPassword"><%= t(:password) %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> <%= t(:characters_minimum) %>)</em>
      <% end %><br />
    </label>
  </div>

  <div class="form-label-group">
    <%= f.password_field :password_confirmation, autocomplete: "off", id:"inputPassword", class: "form-control", placeholder: "Password", required: true  %>
    <label for="inputPassword"><%= t(:password_confirmation) %></label>
  </div>

  <button class="btn btn-lg btn-dark btn-block" type="submit"><%= t(:sign_up) %></button>
  <p class="mt-3 mb-3 text-muted text-center"><%= t(:sign_up_terms) %></p>
<% end %>

<div class="text-center mb-4">
  <h4 class="h5 mb-3 font-weight-normal">
    <%= t(:have_an_account?) %> <%= link_to t(:login), new_session_path(resource_name) %>
  </h4>
</div>

<%= stylesheet_link_tag 'user_system', media: 'all' %>

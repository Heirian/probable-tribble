<%= form_for(@developer, html: { class: 'form-horizontal', role: 'form' }) do |f| %>
  <div class="form-group">
    <%= f.text_field :name, class: 'form-control', placeholder: 'Nome' %>
  </div>
  <div class="form-group">
    <%= f.text_field :website, class: 'form-control', placeholder: 'Website' %>
  </div>
  <%= f.submit class: 'btn btn-primary' %>
<% end %>

<%= link_to 'Index', developers_path %>
